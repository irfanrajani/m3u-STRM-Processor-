# Application Settings
APP_NAME=IPTV Stream Manager
APP_VERSION=1.0.0
DEBUG=false
# SECRET_KEY - REQUIRED! Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY

# Database
DATABASE_URL=postgresql+asyncpg://iptv:iptv_password@db:5432/iptv_manager
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Output Directories
OUTPUT_DIR=/app/output
PLAYLISTS_DIR=/app/output/playlists
STRM_DIR=/app/output/strm_files
EPG_DIR=/app/output/epg

# Stream Health Check Settings
DEFAULT_HEALTH_CHECK_TIMEOUT=10
DEFAULT_HEALTH_CHECK_SCHEDULE=0 3 * * *
MAX_CONCURRENT_HEALTH_CHECKS=50

# Channel Matching Settings
DEFAULT_FUZZY_MATCH_THRESHOLD=85
ENABLE_LOGO_MATCHING=true
LOGO_MATCH_THRESHOLD=90

# Quality Detection
ENABLE_BITRATE_ANALYSIS=true
FFPROBE_TIMEOUT=15

# Emby Integration
EMBY_HOST=
EMBY_API_KEY=
EMBY_LIBRARY_REFRESH=true

# HDHomeRun Emulation (for Emby/Plex Live TV)
# HDHR_PROXY_MODE - 'direct' (redirect to original) or 'proxy' (stream through server)
HDHR_PROXY_MODE=direct
HDHR_DEVICE_ID=IPTV-MGR
HDHR_TUNER_COUNT=4
# EXTERNAL_URL - auto-detected from request if not set (e.g., http://192.168.1.100:8201)
# EXTERNAL_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# IPTV Stream Manager - Environment Configuration
# Copy this file to .env and modify as needed BEFORE running docker-compose
# Most configuration is AUTO-GENERATED on first run with secure defaults!

# ==============================================================================
# PORTS (Optional - customize if needed)
# ==============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3001

# ==============================================================================
# DATABASE (Optional - customize if needed)
# ==============================================================================
POSTGRES_USER=iptv_user
POSTGRES_PASSWORD=iptv_secure_pass_change_me
POSTGRES_DB=iptv_db

